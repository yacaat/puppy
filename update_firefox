/opt/FirefoxESR-portable64/firefox64/firefox --version
cd /tmp
wget -q --show-progress "https://download.mozilla.org/?product=firefox-latest-ssl&os=linux64&lang=en-US" -O firefox.tar.bz2
tar -xJf firefox.tar.bz2
rm -rf /opt/FirefoxESR-portable64/firefox64
mv firefox /opt/FirefoxESR-portable64/firefox64
/opt/FirefoxESR-portable64/firefox64/firefox --version
