/opt/FirefoxESR-portable64/firefox64/firefox --version
cd /tmp
wget "https://download.mozilla.org/?product=firefox-latest-ssl&os=linux64&lang=en-US" -O firefox.tar.bz2
tar -xJf firefox.tar.bz2
sudo rm -rf /opt/FirefoxESR-portable64/firefox64
sudo mv firefox /opt/FirefoxESR-portable64/firefox64
/opt/FirefoxESR-portable64/firefox64/firefox --version
